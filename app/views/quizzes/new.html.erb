<h1>Add quiz</h1>

<%= form_for :quiz, url: quizzes_path do |f| %>

	<% if @quiz.errors.any? %>
		<% @quiz.errors.full_messages.each do |msg| %>
			<div class = "alert alert-danger"><%= msg %></div>
		<% end %>	
	<% end %>	


	<p>
		<%= f.label :name %><br/>
		<%= f.text_field(:name, {:class => 'form-control'}) %>
	</p>

	<p>
		<%= f.submit({:class => 'btn btn-primary'}) %>
	</p>
<% end %>